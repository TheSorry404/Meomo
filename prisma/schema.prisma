generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

/**
 * 用户账户信息
 */
model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique @db.VarChar(20)
  email     String   @unique @db.VarChar(255)
  avatar    String?  @db.VarChar(512)
  password  String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  memos     Memo[]
  settings  Settings[]

  @@map("users")
}

/**
 * 用户备忘录
 */
model Memo {
  id        Int       @id @default(autoincrement())
  title     String    @db.VarChar(100)
  content   String    @db.Text
  tags      Json?     @db.Json
  color     String?   @default("#ffffff") @db.VarChar(9)
  isPinned  Boolean   @default(false) @map("is_pinned")
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    Int       @map("user_id")
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")

  @@index([userId, isPinned])
  @@map("memos")
}


model Settings {
  id          Int      @id @default(autoincrement())
  theme       String   @default("light") @db.VarChar(20)
  fontSize    Int      @default(14) @map("font_size")
  memoPerPage Int      @default(10) @map("memo_per_page")
  language    String   @default("zh-cn") @db.VarChar(8)
  user        User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      Int    @map("user_id")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@map("settings")
}